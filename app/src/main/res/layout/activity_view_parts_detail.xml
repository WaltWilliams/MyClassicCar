<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/viewPartsImageView"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/idTextView"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noimage" />

    <TextView
        android:id="@+id/viewPartsNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/singlePartImageView"
        android:text="@string/part_name"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewPartsImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewPartsNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/existingPartsNameLabel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/singlePartImageView"
        android:text="@string/part_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/viewPartsImageView"
        app:layout_constraintTop_toBottomOf="@+id/viewPartsNameLabel" />

    <TextView
        android:id="@+id/viewPartsNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewPartsNumberTextView"
        android:layout_alignStart="@+id/viewPartsNameTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/part_number"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewPartsImageView"
        app:layout_constraintTop_toBottomOf="@+id/viewPartsNameTextView" />

    <TextView
        android:id="@+id/viewPartsNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewPartsNumberLabel"
        android:layout_alignBottom="@+id/viewPartsImageView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/part_number"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/viewPartsImageView"
        app:layout_constraintTop_toBottomOf="@+id/viewPartsNumberLabel" />

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/viewPartsNumberTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:text="@string/textView"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/viewPartsNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>