<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/srcLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/source"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singlePartSrcTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/source"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/srcLabelTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/srcLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/srcLabelTextView" />

    <TextView
        android:id="@+id/partNumLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/part_number"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/singlePartSrcTextView"
        app:layout_constraintStart_toStartOf="@+id/singlePartSrcTextView"
        app:layout_constraintTop_toBottomOf="@+id/singlePartSrcTextView" />

    <TextView
        android:id="@+id/singlePartNumTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singlePartSrcTextView"
        android:text="@string/part_number"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/partNumLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/partNumLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/partNumLabelTextView" />

</android.support.constraint.ConstraintLayout>